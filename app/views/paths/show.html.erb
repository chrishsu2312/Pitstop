<script src="/assets/maps.js?body=1"></script>

<script>
  var pins = [
  <% @path.place.scan(/\*(.*?)\^/).each do |p| %>
    ["<%= p[0].scan(/\$(.*?)$/)[0][0] %>", "<%= p[0].scan(/\|(.*?)\$/)[0][0] %>"],
  <% end %>
  ]

  function initialize() {    
    make_map(pins, String("<%= @path.polyline %>"));
  }
</script>


