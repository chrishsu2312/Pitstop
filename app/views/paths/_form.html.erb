<%= form_for(@path) do |f| %>
  <% if @path.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@path.errors.count, "error") %> prohibited this path from being saved:</h2>

      <ul>
        <% @path.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="text-align: center">
    <%= f.label "Whatcha lookin' for?", :id => "label1" %><br>
    <%= image_tag "number1.png", :id => "marker1"%>
    <%= f.text_field :search_term,  placeholder: "ex. Resturants, Hotels, Tacos"%>
  </div>
  <div class="field" style="text-align: center">
    <%= f.label :start_address, :id => "label2" %><br>
    <%= image_tag "number2.png", :id => "marker2"%>
    <%= f.text_field :start_address,placeholder: "221 Baker Street" %>
  </div>
  <div class="field" style="text-align: center">
    <%= f.label :end_address, :id => "label3" %><br>
    <%= image_tag "number3.png", :id => "marker3"%>
    <%= f.text_field :end_address, placeholder: "Cupertino, CA"%>
  </div>
  <div id="submit-front" class="actions" style="text-align: center">
    <%= f.submit " ", :id=>"button-front"%>
  </div>
<% end %>


